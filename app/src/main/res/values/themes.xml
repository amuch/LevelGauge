<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.LevelGaugeCompose" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/blue_storm</item>
        <item name="android:dialogTheme">@style/Theme.DialogSettings</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.DialogSettings" parent="android:ThemeOverlay.Material.Dialog.Alert">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

</resources>